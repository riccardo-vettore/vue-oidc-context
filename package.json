		"@vitejs/plugin-vue": "^5.0.4",
		"@vue/test-utils": "2.4.6",
		"eslint": "9.3.0",
		"eslint-plugin-vitest": "0.5.4",
		"eslint-plugin-vue": "9.26.0",
		"globals": "15.3.0",
		"husky": "9.0.11",
		"jsdom": "24.0.0",
		"node-cmd": "5.0.0",
		"path": "0.12.7",
		"semver": "7.6.2",
		"tslib": "2.6.2",
