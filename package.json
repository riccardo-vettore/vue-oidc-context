{
	"name": "vue-oidc-context",
	"description": "OpenID Connect & OAuth2 authentication using vue context api as state management",
	"private": false,
	"version": "0.0.1",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/riccardo-vettore/vue-oidc-context.git"
	},
	"type": "module",
	"keywords": [
		"authentication",
		"context-api",
		"oauth2",
		"oidc",
		"openid",
		"OpenID Connect",
		"vue"
	],
	"scripts": {
